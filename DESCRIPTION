Package: AAGIPalettes
Title: AAGI Colours and Colour Palettes
Version: 0.0.1
Authors@R: c(
    person("Adam H.", "Sparks", , "adamhsparks@gmail.com", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0002-0061-8359")),
    person("Curtin University of Technology", role = "cph",
